<Window x:Class="BorderVisible.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BorderVisible"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="10*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <Button Height="50" Content="Add Button" Click="Button_Click" Margin="5"/>
            <Button Height="50" Content="Add TextBox" Click="Button_Click" Margin="5"/>
        </StackPanel>

        <WrapPanel Margin="30" Grid.Column="1" x:Name="wpInputControlArea">

        </WrapPanel>
    </Grid>
</Window>
